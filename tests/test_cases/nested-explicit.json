{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "@context": {},
    "@graph": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "@type": {
            "const": "Organization"
          },
          "name": {
            "type": "string"
          },
          "employee": {
            "type": "object",
            "properties": {
              "@type": {
                "const": "Person"
              },
              "name": {
                "type": "string"
              }
            },
            "required": ["@type", "name"],
            "additionalProperties": false
          }
        },
        "required": ["@type", "name", "employee"],
        "additionalProperties": false
      }
    }
  },
  "required": ["@context", "@graph"],
  "additionalProperties": true
}
