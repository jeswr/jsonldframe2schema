{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "@type": {
      "const": "Person"
    },
    "address": {
      "type": "object",
      "properties": {
        "@type": {
          "const": "PostalAddress"
        },
        "streetAddress": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        }
      },
      "required": ["@type", "streetAddress", "postalCode"],
      "additionalProperties": true
    }
  },
  "required": ["@type", "address"],
  "additionalProperties": true
}
